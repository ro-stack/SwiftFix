<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10sp">

        <TextView
            android:id="@+id/customer_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/yesteryear"
            android:gravity="center_horizontal"
            android:text="Edit Details"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="40sp" />


        <ImageView
            android:id="@+id/tradesman_profileImage"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_gravity="center"
            android:layout_marginBottom="20sp"
            android:src="@mipmap/ic_launcher_round" />

        <EditText
            android:id="@+id/tradesman_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20sp"
            android:hint="Name"
            android:textColor="@color/colorPrimary"
            android:backgroundTint="@color/colorPrimary"
            android:textColorHint="@color/colorPrimaryDark"/>

        <EditText
            android:id="@+id/tradesman_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20sp"
            android:hint="Phone"
            android:inputType="number"
            android:textColor="@color/colorPrimary"
            android:backgroundTint="@color/colorPrimary"
            android:textColorHint="@color/colorPrimaryDark"/>

        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20sp">

            <RadioButton
                android:id="@+id/plumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Plumber"
                android:textColor="@color/colorPrimary"
                android:buttonTint="@color/colorPrimaryDark"/>

            <RadioButton
                android:id="@+id/electrician"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Electrician"
                android:textColor="@color/colorPrimary"
                android:buttonTint="@color/colorPrimaryDark"/>

            <RadioButton
                android:id="@+id/builder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Builder"
                android:textColor="@color/colorPrimary"
                android:buttonTint="@color/colorPrimaryDark"/>

            <RadioButton
                android:id="@+id/gardener"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gardener"
                android:textColor="@color/colorPrimary"
                android:buttonTint="@color/colorPrimaryDark"/>

        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >




        <Button
            android:id="@+id/back"
            android:layout_width="178dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/mybutton"
            android:text="Back"
            android:textColor="@color/colorPrimary"
            android:fontFamily="@font/raleway_bold"
            android:layout_gravity="left"/>

        <Button
            android:id="@+id/confirm"
            android:layout_width="178dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/mybutton"
            android:text="Confirm"
            android:textColor="@color/colorPrimary"
            android:fontFamily="@font/raleway_bold"
            android:layout_gravity="right"/>

    </LinearLayout>

        <Button
            android:id="@+id/logout_button"
            android:layout_margin="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:background="@drawable/mybutton"
            android:textColor="@color/colorPrimary"
            android:fontFamily="@font/raleway_bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/yesteryear"
            android:gravity="center"
            android:text="Swift"
            android:textColor="@color/colorPrimary"
            android:textSize="30dp" />

        <!--- This not showing -->
        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/raleway_bold"
            android:gravity="center"
            android:text="Fix"
            android:textColor="@color/colorPrimary"

            android:textSize="20dp" />


    </LinearLayout>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TradesmanMapActivity">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center">

        <Switch
            android:id="@+id/availableSwitch"
            android:layout_width="162dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/switchbtn"
            android:fontFamily="@font/raleway_bold"
            android:padding="18dp"
            android:text="AVAILABLE"
            android:textColor="@color/colorPrimary"
            android:theme="@style/switchCol"
            />

    </LinearLayout>




    <ImageButton
        android:id="@+id/settings_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_margin="10dp"
        android:background="@drawable/switchbtn"
        android:padding="10dp"
        android:src="@drawable/ic_hamburger" />

    <LinearLayout
        android:id="@+id/customer_information"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:visibility="gone"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="18dp"
            android:background="@drawable/mybutton"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/customerProfileImage"
                android:layout_width="100sp"
                android:layout_height="match_parent"
                android:padding="20sp"
                android:src="@mipmap/icon_swift" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="0sp">

                <TextView
                    android:id="@+id/customer_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10sp"
                    android:paddingBottom="10sp"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="@font/raleway_bold"/>

                <TextView
                    android:id="@+id/customer_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10sp"
                    android:paddingBottom="10sp"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="@font/raleway_bold"/>

                <TextView
                    android:id="@+id/customer_problem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10sp"
                    android:paddingBottom="10sp"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="@font/raleway_bold"/>
            </LinearLayout>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/job_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/switchbtn"
            android:fontFamily="@font/raleway_bold"
            android:text="Accept Request?"
            android:textColor="@color/colorPrimary"
            android:layout_margin="2dp"/>

        <Button
            android:id="@+id/cancel_request"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@drawable/switchbtn"
            android:layout_margin="2dp"
            android:fontFamily="@font/raleway_bold"
            android:outlineSpotShadowColor="@color/colorPrimaryDark"
            android:text="Cancel Request"
            android:textColor="@color/colorPrimary"
            android:visibility="gone"
            />

    </LinearLayout>


    </LinearLayout>


</FrameLayout>

